@{
    ViewData["Title"] = "Dashboard - Sistema de Comandas";
}

<div class="row">
    <div class="col-12">
        <div class="perfil-header perfil-supervisor mb-4">
            <h1 class="mb-2">
                <i class="fas fa-tachometer-alt me-3"></i>
                Hotel Comandas Eletrônicas v2.0
            </h1>
            <p class="mb-0 fs-5">Instância Ecológica do Tepequém</p>
            <small>Sistema local - Operacional 24/7</small>
        </div>
    </div>
</div>

<!-- Cards de Status do Sistema -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <div class="text-primary mb-3">
                    <i class="fas fa-users fa-3x"></i>
                </div>
                <h5 class="card-title">Usuários</h5>
                <h3 class="text-primary">@ViewBag.TotalUsuarios</h3>
                <small class="text-muted">Cadastrados no sistema</small>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <div class="text-success mb-3">
                    <i class="fas fa-box fa-3x"></i>
                </div>
                <h5 class="card-title">Produtos</h5>
                <h3 class="text-success">@ViewBag.TotalProdutos</h3>
                <small class="text-muted">Disponíveis para venda</small>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <div class="text-info mb-3">
                    <i class="fas fa-bed fa-3x"></i>
                </div>
                <h5 class="card-title">Hóspedes</h5>
                <h3 class="text-info">@ViewBag.TotalHospedes</h3>
                <small class="text-muted">Registros ativos</small>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card text-center">
            <div class="card-body">
                <div class="text-warning mb-3">
                    <i class="fas fa-receipt fa-3x"></i>
                </div>
                <h5 class="card-title">Lançamentos</h5>
                <h3 class="text-warning">@ViewBag.TotalLancamentos</h3>
                <small class="text-muted">Total de consumos</small>
            </div>
        </div>
    </div>
</div>

<!-- Acesso Rápido por Perfil -->
<div class="row mb-4">
    <div class="col-12">
        <h3 class="mb-3">
            <i class="fas fa-rocket me-2"></i>
            Acesso Rápido por Perfil
        </h3>
    </div>

    <!-- Acesso do Garçom -->
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100">
            <div class="perfil-header perfil-garcom">
                <h5 class="mb-0">
                    <i class="fas fa-cocktail me-2"></i>
                    Garçom
                </h5>
            </div>
            <div class="card-body text-center">
                <p class="card-text">Lançamento direto de consumos, sem login inicial.</p>
                <div class="d-grid gap-2">
                    <a href="/lancamento" class="btn btn-success">
                        <i class="fas fa-plus-circle me-2"></i>
                        Lançar Consumo
                    </a>
                </div>
                <small class="text-muted mt-2 d-block">Código: 18 (João Santos)</small>
            </div>
        </div>
    </div>

    <!-- Acesso do Cliente -->
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100">
            <div class="perfil-header perfil-cliente">
                <h5 class="mb-0">
                    <i class="fas fa-user me-2"></i>
                    Cliente
                </h5>
            </div>
            <div class="card-body text-center">
                <p class="card-text">Consulta transparente do extrato, sem login.</p>
                <div class="d-grid gap-2">
                    <a href="/consulta" class="btn btn-info">
                        <i class="fas fa-search me-2"></i>
                        Consultar Extrato
                    </a>
                </div>
                <small class="text-muted mt-2 d-block">Quarto ou Nome + Telefone</small>
            </div>
        </div>
    </div>

    <!-- Acesso da Recepção -->
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100">
            <div class="perfil-header perfil-recepcao">
                <h5 class="mb-0">
                    <i class="fas fa-desk me-2"></i>
                    Recepção
                </h5>
            </div>
            <div class="card-body text-center">
                <p class="card-text">Registro de hóspedes e cancelamento de lançamentos.</p>
                <div class="d-grid gap-2">
                    <a href="/usuario/login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Fazer Login
                    </a>
                </div>
                <small class="text-muted mt-2 d-block">Login: anacclara01</small>
            </div>
        </div>
    </div>

    <!-- Acesso do Supervisor -->
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100">
            <div class="perfil-header perfil-supervisor">
                <h5 class="mb-0">
                    <i class="fas fa-crown me-2"></i>
                    Supervisor
                </h5>
            </div>
            <div class="card-body text-center">
                <p class="card-text">Gestão completa do sistema e relatórios gerenciais.</p>
                <div class="d-grid gap-2">
                    <a href="/usuario/login" class="btn btn-warning">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Fazer Login
                    </a>
                </div>
                <small class="text-muted mt-2 d-block">Login: mariasilva01</small>
            </div>
        </div>
    </div>
</div>

<!-- Informações do Sistema -->
<div class="row">
    <!-- Usuários Cadastrados -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-users me-2"></i>
                    Usuários do Sistema
                </h5>
            </div>
            <div class="card-body">
                @if (ViewBag.UsuariosAtivos != null && ((IEnumerable<dynamic>)ViewBag.UsuariosAtivos).Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Perfil</th>
                                    <th>Código</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in (IEnumerable<dynamic>)ViewBag.UsuariosAtivos)
                                {
                                    <tr>
                                        <td>@usuario.Nome</td>
                                        <td>
                                            <span class="badge bg-secondary">@usuario.Perfil</span>
                                        </td>
                                        <td>
                                            <code>@usuario.CodigoID</code>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">Ativo</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Nenhum usuário encontrado.</p>
                }
            </div>
        </div>
    </div>

    <!-- Produtos Disponíveis -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="fas fa-box me-2"></i>
                    Produtos Disponíveis
                </h5>
            </div>
            <div class="card-body">
                @if (ViewBag.ProdutosDisponiveis != null && ((IEnumerable<dynamic>)ViewBag.ProdutosDisponiveis).Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Produto</th>
                                    <th>Categoria</th>
                                    <th>Valor</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var produto in (IEnumerable<dynamic>)ViewBag.ProdutosDisponiveis)
                                {
                                    <tr>
                                        <td>@produto.Descricao</td>
                                        <td>
                                            <span class="badge bg-info">@produto.Categoria</span>
                                        </td>
                                        <td>
                                            <strong>@produto.Valor.ToString("C2")</strong>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Nenhum produto encontrado.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Botões de Teste (Apenas para Desenvolvimento) -->
<div class="row">
    <div class="col-12">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="fas fa-tools me-2"></i>
                    Ferramentas de Teste (Desenvolvimento)
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6 mb-2">
                        <a href="/Home/TestarConexao" class="btn btn-outline-primary w-100">
                            <i class="fas fa-database me-2"></i>
                            Testar Conexão com Banco
                        </a>
                    </div>
                    <div class="col-lg-6 mb-2">
                        <a href="/Home/ResetarDados" class="btn btn-outline-danger w-100"
                           onclick="return confirmarAcao('Tem certeza? Isso irá resetar todos os dados!')">
                            <i class="fas fa-sync-alt me-2"></i>
                            Resetar Dados Iniciais
                        </a>
                    </div>
                </div>
                <div class="row">
                    <!-- Teste de Sistema -->
                    <div class="col-lg-3 mb-3">
                        <a href="/home/testarregistrohospedes" class="btn btn-info btn-lg w-100">
                            <i class="fas fa-users-cog fa-2x mb-2"></i>
                            <div>Testar Sistema</div>
                            <small>Verificar registro</small>
                        </a>
                    </div>
                </div>
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Estes botões devem ser removidos na versão de produção.
                </small>
            </div>
        </div>
    </div>
</div>

