@{
    ViewData["Title"] = "Dashboard - Sistema de Comandas";
}

<div class="row">
    <div class="col-12">
        <div class="perfil-header perfil-cliente mb-4">
            <h3 class="mb-2">
                <i class="fas fa-hotel me-3"></i>
                Hotel Comandas Eletrônicas v2.0
            </h3>
            <p class="mb-2 fs-5">Instância Ecológica do Tepequém</p>
            <div class="alert alert-info" role="alert">
                <h5 class="alert-heading">
                    <i class="fas fa-info-circle me-2"></i>
                    Como consultar seu extrato de consumo
                </h5>
                <p class="mb-2">
                    <strong>Para hóspedes:</strong> Consulte seus consumos de forma rápida e transparente usando o botão "Consultar Extrato" abaixo.
                </p>
                <ul class="mb-2">
                    <li><strong>Por número do quarto:</strong> Digite apenas o número do seu quarto (ex: 101, 205)</li>
                    <li><strong>Por nome e telefone:</strong> Digite seu nome completo e telefone de cadastro</li>
                    <li><strong>Acesso livre:</strong> Não é necessário login ou senha</li>
                </ul>
                <div class="text-center mt-3">
                    <a href="/consulta" class="btn btn-info btn-lg">
                        <i class="fas fa-search me-2"></i>
                        Consultar Meu Extrato
                    </a>
                </div>
            </div>
            <small class="text-muted">Sistema local - Operacional 24/7</small>
        </div>
    </div>
</div>

<!-- Acesso Rápido - Apenas para Recepção e Supervisor -->
@if (Context.Session.GetString("UsuarioLogado") != null && 
     (Context.Session.GetString("PerfilUsuario") == "Recepção" || Context.Session.GetString("PerfilUsuario") == "Supervisor"))
{
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="mb-3">
                <i class="fas fa-rocket me-2"></i>
                Painel Administrativo
            </h3>
        </div>

        <!-- Acesso do Garçom -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card h-100">
                <div class="perfil-header perfil-garcom">
                    <h5 class="mb-0">
                        <i class="fas fa-cocktail me-2"></i>
                        Lançar Consumo
                    </h5>
                </div>
                <div class="card-body text-center">
                    <p class="card-text">Lançamento direto de consumos com código do garçom.</p>
                    <div class="d-grid gap-2">
                        <a href="/lancamento" class="btn btn-success">
                            <i class="fas fa-plus-circle me-2"></i>
                            Acessar Sistema
                        </a>
                    </div>
                    <small class="text-muted mt-2 d-block">Use código de 2 dígitos</small>
                </div>
            </div>
        </div>

        <!-- Acesso aos Hóspedes -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card h-100">
                <div class="perfil-header perfil-recepcao">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>
                        Gerenciar Hóspedes
                    </h5>
                </div>
                <div class="card-body text-center">
                    <p class="card-text">Registrar novos hóspedes e gerenciar hospedagens.</p>
                    <div class="d-grid gap-2">
                        <a href="/registro" class="btn btn-primary">
                            <i class="fas fa-user-plus me-2"></i>
                            Acessar Hóspedes
                        </a>
                    </div>
                    <small class="text-muted mt-2 d-block">Check-in • Check-out • Editar</small>
                </div>
            </div>
        </div>

        <!-- Acesso aos Produtos -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card h-100">
                <div class="perfil-header perfil-supervisor">
                    <h5 class="mb-0">
                        <i class="fas fa-box me-2"></i>
                        Gerenciar Produtos
                    </h5>
                </div>
                <div class="card-body text-center">
                    <p class="card-text">Cadastrar e gerenciar produtos e serviços disponíveis.</p>
                    <div class="d-grid gap-2">
                        <a href="/produto" class="btn btn-warning">
                            <i class="fas fa-shopping-cart me-2"></i>
                            Acessar Produtos
                        </a>
                    </div>
                    <small class="text-muted mt-2 d-block">Cardápio • Preços • Categorias</small>
                </div>
            </div>
        </div>

        <!-- Acesso aos Relatórios -->
        @if (Context.Session.GetString("PerfilUsuario") == "Supervisor")
        {
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card h-100">
                    <div class="perfil-header perfil-supervisor">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-bar me-2"></i>
                            Relatórios
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <p class="card-text">Acessar relatórios gerenciais e análises do sistema.</p>
                        <div class="d-grid gap-2">
                            <a href="/relatorio" class="btn btn-info">
                                <i class="fas fa-chart-line me-2"></i>
                                Acessar Relatórios
                            </a>
                        </div>
                        <small class="text-muted mt-2 d-block">Vendas • Usuários • Ocupação</small>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Cards de Status do Sistema - Apenas para usuários logados -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3">
                <i class="fas fa-chart-pie me-2"></i>
                Status do Sistema
            </h4>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-primary mb-3">
                        <i class="fas fa-users fa-3x"></i>
                    </div>
                    <h5 class="card-title">Usuários</h5>
                    <h3 class="text-primary">@ViewBag.TotalUsuarios</h3>
                    <small class="text-muted">Cadastrados no sistema</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-success mb-3">
                        <i class="fas fa-box fa-3x"></i>
                    </div>
                    <h5 class="card-title">Produtos</h5>
                    <h3 class="text-success">@ViewBag.TotalProdutos</h3>
                    <small class="text-muted">Disponíveis para venda</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-info mb-3">
                        <i class="fas fa-bed fa-3x"></i>
                    </div>
                    <h5 class="card-title">Hóspedes</h5>
                    <h3 class="text-info">@ViewBag.TotalHospedes</h3>
                    <small class="text-muted">Registros ativos</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-warning mb-3">
                        <i class="fas fa-receipt fa-3x"></i>
                    </div>
                    <h5 class="card-title">Lançamentos</h5>
                    <h3 class="text-warning">@ViewBag.TotalLancamentos</h3>
                    <small class="text-muted">Total de consumos</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Informações do Sistema - Apenas para usuários logados -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3">
                <i class="fas fa-database me-2"></i>
                Informações do Sistema
            </h4>
        </div>
        
        <!-- Usuários Cadastrados -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>
                        Usuários do Sistema
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.UsuariosAtivos != null && ((IEnumerable<dynamic>)ViewBag.UsuariosAtivos).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Perfil</th>
                                        <th>Código</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var usuario in (IEnumerable<dynamic>)ViewBag.UsuariosAtivos)
                                    {
                                        <tr>
                                            <td>@usuario.Nome</td>
                                            <td>
                                                <span class="badge bg-secondary">@usuario.Perfil</span>
                                            </td>
                                            <td>
                                                <code>@usuario.CodigoID</code>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">Ativo</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Nenhum usuário encontrado.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Produtos Disponíveis -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-box me-2"></i>
                        Produtos Disponíveis
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ProdutosDisponiveis != null && ((IEnumerable<dynamic>)ViewBag.ProdutosDisponiveis).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Produto</th>
                                        <th>Categoria</th>
                                        <th>Valor</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var produto in (IEnumerable<dynamic>)ViewBag.ProdutosDisponiveis)
                                    {
                                        <tr>
                                            <td>@produto.Descricao</td>
                                            <td>
                                                <span class="badge bg-info">@produto.Categoria</span>
                                            </td>
                                            <td>
                                                <strong>@produto.Valor.ToString("C2")</strong>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Nenhum produto encontrado.</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

<!-- Seção de Ajuda - Sempre Visível -->
